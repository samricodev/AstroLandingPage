---
import projects from "../../config/projects.json";
---

<h1 class="text-5xl font-bold my-8 text-center">Projects</h1>
{
    projects.map((project) => (
        <div class="flex flex-col text-center mb-3 md:text-left md:flex-row">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p class="my-2 text-justify">{project.description}</p>
                <button class="bg-indigo-500 px-3 py-2 rounded-sm hover:bg-indigo-400 mt-2" >More Info</button>
            </div>
            <div class="flex-1 p-4">
                <img
                    class="w-80 m-auto"
                    src={project.image}
                    alt={project.title}
                />
            </div>
        </div>
    ))
}
